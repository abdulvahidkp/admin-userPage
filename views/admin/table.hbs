<table class="table">
    <thead>
        <tr>
            <th scope="col">User name</th>
            <th scope="col">Email</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td><a href="/admin/edit/{{this._id}}" class="btn btn-secondary">Edit</a></td>
            <td><a href="/admin/delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete{{this.name}}')">Delete</a></td>{{/each}}
    </tbody>
</table>